extends ../layout.pug

block content
    .container
        h1 Inscription
        if error 
            .alert.alert-danger
                = error
        form(method="post")
            .form-group
                label(for="firstname") Prénom
                input.form-control(type="text" maxlength="60" value=firstname id="firstname" name="firstname" placeholder="Votre prénom" required)
            .form-group
                label(for="lastname") Nom
                input.form-control(type="text" maxlength="60" value=lastname id="lastname" name="lastname" placeholder="Votre nom" required)
            .form-group
                label(for="email") Adresse E-mail
                input.form-control(type="email" id="email" value=email name="email" placeholder="Votre adresse email" required)
            .form-group
                label(for="password") Mot de passe
                input.form-control(type="password" id="password" name="password" placeholder="Choisissez un mot de passe" required)
    
            .form-group
                button.btn.btn-primary(type="submit") S'inscrire