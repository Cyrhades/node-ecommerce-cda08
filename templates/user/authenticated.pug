extends ../layout.pug

block content
    .container
        h1 Connexion
        if error 
            .alert.alert-danger
                = error
        form(method="post")
            .form-group
                label(for="email") Adresse E-mail
                input.form-control(type="email" id="email" value=email name="email" placeholder="Votre adresse email" required)
            .form-group
                label(for="password") Mot de passe
                input.form-control(type="password" id="password" name="password" placeholder="Votre mot de passe" required)
    
            button.btn.btn-primary(type="submit") Se connecter